<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% another_user.each do |user| %>
      <tr>
        <th scope="row"><%= user.name %></th>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Send message', new_user_message_path(user_id: user.id), class: 'btn btn-info-outline' %>
          <%= link_to 'Add friend', class: 'btn btn-info-outline' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
