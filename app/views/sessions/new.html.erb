<%= form_tag sessions_path, method: 'post' do %>
    <div class="form-group">
      <div class="form-control-control">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
      <div class="form-control-control">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag 'Log in' %>
    </div>
<% end %>