<% if @messages.count > 0 %>
    <h1>Received messages</h1>
    <table class="table">
      <thead>
      <tr>
        <th>From</th>
        <th>Content</th>
        <th>Time</th>
      </tr>
      </thead>
      <tbody>
      <% @messages.each do |message| %>
          <tr>
            <th scope="row"><%= message.sender.name %></th>
            <% unless message.unread? %>
                <td><%= link_to message.body, message %></td>
            <% else %>
                <td><%= message.body %></td>
            <% end %>
            <td><%= time_ago_in_words message.created_at %> ago</td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <div>No messages.</div>
<% end %>